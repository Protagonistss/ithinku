{
  "extends": "@ithinku/tsconfig/bundler-strict",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "target": "ES2018"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/**", "src/**/*.test.ts", "node_modules", "dist"]
} 
