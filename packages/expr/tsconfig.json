{
  "extends": "@ithinku/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "inlineSourceMap": false,
    "inlineSources": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "src/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
} 
